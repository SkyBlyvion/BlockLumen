{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,   // Permet l'utilisation des décorateurs
    "emitDecoratorMetadata": true     // Émet des métadonnées pour les décorateurs (nécessaire pour TypeORM)
  },
  "include": ["src/**/*.ts"],         // Recommandé pour spécifier les fichiers à inclure
  "exclude": ["node_modules", "dist"] // Recommandé pour exclure des dossiers
}